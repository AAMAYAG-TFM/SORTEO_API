pipeline {

    agent any
 
    
    tools {
       maven 'Maven-3.8.6' 
    }
    
    environment {
        DATE = new Date().format('yy.M')
        TAG = "${DATE}.${BUILD_NUMBER}"
    }
    

    
    stages { 
    
        stage('Source') {
            steps {

                git branch: 'develop', url: 'https://github.com/AAMAYAG-TFM/SORTEO_API.git'
            }
        }   
         
         stage ('Build') {
            
            steps {
                echo 'Construyendo proyecto'
 
                sh 'mvn -Dhttps.protocols=TLSv1.2 -f /var/lib/jenkins/workspace/sorteo/sorteo/pom.xml clean package -X'
            }
        }
        
        stage('Docker Build') {
            steps {
                echo 'Construyendo imagen'
                
                script {
                    docker.build("venus90210/sorteo_api:${TAG}")
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Hello world!' 
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Hello world!' 
            }
        }
    }
}